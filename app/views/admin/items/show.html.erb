<div class="container">
  <div class="mt-3 mb-5">
    <h2>商品詳細</h2>
  </div>
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_profile_image(200,200) %>
    </div>
    <div class="col-4">
      <p>商品名：<%= @item.name %></p>
      <p>商品説明:<%= @item.introduction %></p>
      <p>税込価格(税抜価格）:<%=@item.with_tax_price %>円 (<%= @item.price %>円)</p>
         <div class="mt-3">
           <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
         </div>
    </div>
    <div class="col-4">
    </div>
  </div>
</div>

