<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <%= f.label :商品画像 %>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <%= f.label :商品名 %>
  <%= f.text_field :name %>
  
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction %>
  
  <%= f.label :税抜価格 %>
  <%= f.text_field :price %>
    
  <%= f.submit '新規登録', class: "btn btn-success" %>
  
<% end %>

