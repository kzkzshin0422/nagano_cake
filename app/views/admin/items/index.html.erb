<div class="container">
  <div class="row mt-3 mb-1">
    <div class="col-2">
      <h4>商品一覧</h4>
    </div>
    <div class="col-8 text-right">
      <%= link_to new_admin_item_path, class: "text-dark" do %>
       <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
        　<th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%=item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id), class: "link-underline-dark" %></td>
          <td><%=item.price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>



<%= paginate @items %>
