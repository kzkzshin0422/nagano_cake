<div class="container mt-3">
  <h2>商品編集</h2>
    <div class="center-block">
      <table class="table table-borderless">
      <%= form_with model: @item, url: admin_item_path do |f| %>
      <tr>
        <td><%= f.label :商品画像 %></td>
        <td><%= f.file_field :profile_image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td><%= f.label :商品名 %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :商品説明 %></td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td><%= f.label :税抜価格 %></td>
        <td><%= f.text_field :price %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
      </tr>
      <% end %>
      </table>
    </div>
</div>












