<div class="container mt-3 mb-3">
<h4><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h4>

 <table class="table table-borderless">
   <tbody>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <tr>
      <th scope="row"><%= f.label :名前 %></th>
      <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label :カナ %></th>
      <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label :住所 %></th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th scope="row"><%= f.label :電話番号 %></th>
      <td><%= f.text_field :telephone_number %></td>
    <tr>
      <th scope="row"><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
    </tr>
   <% end %>
  </tbody>
  </table>
  </div>
  
