<div class="container mt-3">
  <h4>注文履歴一覧</h4>
   <div class="center-block">
    <table class="table">
      <thead>
       <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
       </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td><%= link_to admin_order_path(order.id) do %>
        <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
        <% end %>
        </td>
        <td><%= order.name %></td>
        <td><%= order.orderdetails.sum(:amount) %></td>
       </tr>
       <% end %>
      </tbody>
    </table>
   </div>
  <%= paginate @orders %>
</div>
