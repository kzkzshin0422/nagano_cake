<div class="container">
  <div class="mt-3 mb-5">
    <h4>注文履歴詳細</h4>
  </div>
    <div class="row">
     <div class="col-6">
         <h4>注文情報</h4>
            <table class="table table-bordered">
              <tr>
                <td scope="col" style="width: 30%">注文日</td>
                <td scope="col" style="width: 70%"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
              </tr>
              <tr>
                <td>配送先</td>
                <td>
                  〒<%= @order.postal_code %><br>
                    <%= @order.address %><br>
                    <%= @order.name %>
                </td>
              </tr>
              <tr>
                <td>支払方法</td>
                <td><%= @order.payment_method_i18n %></td>
              </tr>
            </table>
     </div>
     <div class="col-6">
       <h4>請求情報</h4>
          <table class="table table-bordered">
            <tr>
              <td scope="col" style="width: 60%">商品合計</td>
              <td scope="col" style="width: 40%"><%= @total.round.to_s(:delimited) %></td>
            </tr>
            <tr>
              <td>送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <td>請求金額</td>
              <td><%= @order.postage.to_i + @total.to_i %></td>
            </tr>
          </table>
     </div>
    </div>
    <div class="row">
      <div class="col-8">
        <h4>注文内容</h4>
          <table class="table table-bordered">
            <thead>
             <tr>
              <td scope="col" style="width: 60%">商品</td>
              <td scope="col" style="width: 20%">単価(税込）</td>
              <td scope="col" style="width: 10%">個数</td>
              <td scope="col" style="width: 10%">小計</td>
             </tr>
            </thead>
            <tbody>
            <% @order.orderdetails.each do |orderdetail| %>
              <tr>
                <td><%= orderdetail.item.name %></td>
                <td><%= orderdetail.item.with_tax_price %></td>
                <td><%= orderdetail.amount %></td>
                <td><%= orderdetail.subtotal %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
      </div>
    </div>
</div>






