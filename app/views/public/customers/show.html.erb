<h4>マイページ</h4>

<p>登録情報</p>
<p><%= link_to '編集する', edit_public_customers_path, class: "btn btn-success" %></p>

<table class="table table-bordered">
  <tbody>
    <tr>
      <th scope="row">氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th scope="row">カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th scope="row">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th scope="row">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th scope="row">電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th scope="row">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<p>注文履歴</p>
<p><%= link_to '一覧を見る', public_orders_path, class: "btn btn-primary" %></p>

