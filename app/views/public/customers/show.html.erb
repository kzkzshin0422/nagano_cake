<div class="container">
  <div class="mt-3">
    <h4>マイページ</h4>
  </div>
    <div class="row mt-4">
      <div class="col-2">
        <h5><strong>登録情報</strong></h5>
      </div>
      <div class="col-10 mb-3">
        <%= link_to '編集する', customers_information_edit_path, class: "btn btn-success" %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="col" style="width: 30%">氏名</th>
          <td scope="col" style="width: 70%"><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th scope="row">カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="row">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="row">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="row">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    </div>
    </div>
  <div class="row">
    <div class="col-2">
      <h5><strong>注文履歴</strong></h5>
    </div>
    <div class="col-10">
      <%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

