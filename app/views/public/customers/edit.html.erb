<div class="container">
  <div class="mt-3">
    <h4>会員情報編集</h4>
  </div>
  <div class="row">
    <div class="col-8">
      <%= form_with model: @customer, url: customers_information_path do |f| %>
      　<table class="table table-bordered">
          <tbody>
            <tr>
              <th scope="col" style="width: 30%"><%= f.label :名前 %></th>
              <td scope="col" style="width: 70%"><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <th scope="row"><%= f.label :カナ %></th>
              <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <th scope="row"><%= f.label :郵便番号 %></th>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <th scope="row"><%= f.label :住所 %></th>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <th scope="row"><%= f.label :電話番号 %></th>
              <td><%= f.text_field :telephone_number %></td>
            <tr>
              <th scope="row"><%= f.label :メールアドレス %></th>
              <td><%= f.text_field :email %></td>
            </tr>
          </tbody>
        </table>
        <%= f.submit "編集内容を保存",class: "btn btn-success" %>
       <% end %>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to '退会する',  customers_confirm_path, class: "btn btn-danger" %>
  </div>
</div>

